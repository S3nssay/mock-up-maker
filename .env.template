# API Provider Settings
AI_IMAGE_PROVIDER=seedream_kie  # Options: seedream_kie, nano_banana, seedream_aiml, seedream_byteplus

# Seedream API Keys (Multiple provider support)
SEEDREAM_KIE_API_KEY=your_kie_api_key_here
SEEDREAM_AIML_API_KEY=your_aiml_api_key_here
SEEDREAM_BYTEPLUS_API_KEY=your_byteplus_api_key_here

# Nano Banana API
NANO_BANANA_API_KEY=your_nano_banana_key_here
NANO_BANANA_ENDPOINT=https://api.nano-banana.com/v1

# Generation Settings
DEFAULT_IMAGE_SIZE=landscape_4_3
DEFAULT_RESOLUTION=2K
CONCURRENT_REQUESTS=3
GUIDANCE_SCALE=7.5
NUM_INFERENCE_STEPS=20

# Provider Fallback
ENABLE_FALLBACK=true
FALLBACK_ORDER=seedream_kie,nano_banana,seedream_aiml

# Output Settings
OUTPUT_DIR=./product_ads
IMAGE_FORMAT=PNG
RESULTS_FILENAME=results.xlsx
ORGANIZE_BY_BRAND=true

# Overlay Settings
ENABLE_PRODUCT_OVERLAY=true
DEFAULT_OVERLAY_POSITION=bottom-left
OVERLAY_FONT_SIZE=24
OVERLAY_BACKGROUND_OPACITY=0.8
QR_CODE_SIZE=100

# Brand Customization
DEFAULT_BRAND_COLOR=#000000
DEFAULT_FONT_FAMILY=Arial
WATERMARK_ENABLED=false

# Cost Control
MAX_COST_PER_IMAGE=0.05
TOTAL_BUDGET_LIMIT=100.0

# Retry Settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2